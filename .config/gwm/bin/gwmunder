#!/usr/bin/env bash
# print window id directly underneath mouse

intCheck() {
	[[  $1 != 0 ]] 2> /dev/null
	[[  $? != 2 ]] || return 1
}

[[ $# == 0 ]] && {
	PNTR="$(wmp)"
	PX="${PNTR% *}"
	PY="${PNTR#* }"
} || {
	intCheck $1 && PX=$1 || return 1
	intCheck $2 && PY=$2 || return 1
}

for wid in $(lsw | tac); do
	WX="$(wattr x $wid)"
	WY="$(wattr y $wid)"

	[[ "$WX" -gt "$PX" ]] && continue
	[[ "$WY" -gt "$PY" ]] && continue

	WW="$(wattr w $wid)"
	WH="$(wattr h $wid)"

	[[ "$((WX + WW))" -lt "$PX" ]] && continue
	[[ "$((WY + WH))" -lt "$PY" ]] && continue

	printf '%s\n' "$wid" 
	unset -v wid
	exit
done

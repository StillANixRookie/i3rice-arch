#!/usr/bin/env bash

kill -1 $(pidof cwm)

while true; do
	case $1 in
		--toggle | -t ) O_toggle=1 ;;
		--stop   | -s ) O_stop=1   ;;
		--start  | -S ) O_start=1  ;;
		--help | -h ) help ; shift ;;
		-- ) shift ; break ;;
		*  ) break         ;;
	esac
	shift
done

if [[ -n $O_toggle ]] || [[ -n $O_stop ]] ; then
	pkill -f gwmlstn
	pkill -f gwmpulse
fi

if [[ -n $O_toggle ]] || [[ -n $O_start ]] ; then
	gwmpulse &>/dev/null &
	gwmlstn &>/dev/null &
fi

#!/usr/bin/env bash
#
# z3bra - 2015 (c) wtfpl
# make the current window "rainbowish"... Awesome idea from xero@nixers.net !

FREQ=${FREQ:-0.05}
COLORS="$(cat pulsecolors | sed '/^#/d')"
CUR=$(pfw)
echo $COLORS

while :; do
    for c in $COLORS; do
        chwb -c ${c} $(pfw)
        sleep $FREQ
    done
done

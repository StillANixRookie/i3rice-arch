#!/usr/bin/env bash
# To run after applying theme
for i in $(ls /home/gavarch/.config/glava/.themer | grep '^template_'); do
	cp "/home/gavarch/.config/glava/.themer/${1}/${i/template_}" "/home/gavarch/.config/glava/${i/template_}"
done

PID=$(pidof glava)

[[ -n $PID ]] && {
	killall glava
	glach
}

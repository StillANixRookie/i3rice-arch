[global]
	font = Iosevka 13
	
	allow_markup = yes
	
	# The format of the message.  Possible variables are:
	#   %a  appname
	#   %s  summary
	#   %b  body
	#   %i  iconname (including its path)
	#   %I  iconname (without its path)
	#   %p  progress value if set ([  0%] to [100%]) or nothing
	# Markup is allowed
	format = "<b>%s</b>\n%b"
	
	sort = yes
	indicate_hidden = yes
	alignment = left
	bounce_freq = 0
	show_age_threshold = 60
	word_wrap = yes
	ignore_newline = no
	geometry = "500x5-5+25"
	shrink = no
	transparency = 20
	idle_threshold = 120
	monitor = 0
	follow = mouse
	sticky_history = yes
	history_length = 20
	show_indicators = yes
	line_height = 0
	separator_height = 1
	separator_width = 1
	padding = 0
	horizontal_padding = 0
	separator_color = frame
	startup_notification = false
	# dmenu = /usr/bin/dmenu -p dunst:
	browser = /usr/bin/chromium
	icon_position = on
	icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/
	max_icon_size = 100


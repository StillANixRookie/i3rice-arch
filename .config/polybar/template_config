[module/start]
type = custom/text
content = %{T1}%{T-}
click-left = ~/scr/i3menu -s -c white -l 1
click-middle = ~/scr/xtheme
click-right = ~/scr/keybindingsmenu launch
content-background = ${colors.fg0}
content-foreground = ${colors.bg0}
content-padding = 2

[module/startfvwm]

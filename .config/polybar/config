[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[bar/i3]
;monitor = ${env:MONITOR:HDMI-1}
;override-redirect = true
;bottom = true
height = 25
width = 100%
radius = 0.0
fixed-center = false
enable-ipc = true
background = ${colors.tr}
foreground = ${colors.bg0}
line-size   = 0
border-size = 0
line-color   = ${colors.acc}
border-color = #2aa198
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0
font-0 = CMU Typewriter Text:size=12;3
font-1 = FontAwesome5Free:style=Solid:size=15;3
font-2 = FontAwesome5Brands:style=Solid:size=15;3
font-3 = Inconsolata Nerd Font:style=Regular:size=21;6
tray-position    = right
tray-padding     = 2
tray-maxsize     = 16
tray-transparent = true
tray-background  = ${colors.acc}
cursor-click  = pointer
cursor-scroll = ns-resize
modules-left   = start td ws xkeyboard i3bg arrow1
modules-center = 
modules-right  = arrow2 i3media disk memory cpu temperature i3light i3vol battery

[bar/fvwm]
;monitor = ${env:MONITOR:HDMI-1}
;bottom = true
;override-redirect = true
height = 40
width = 100%
radius = 0.0
fixed-center = false
enable-ipc = true
background = ${colors.tr}
foreground = ${colors.bg0}
line-size    = 0
border-size  = 10
line-color   = ${colors.acc}
border-color = ${colors.tr}
padding-left  = 0
padding-right = 0
module-margin-left  = 0
module-margin-right = 0
font-0 = CMU Typewriter Text:style=Semibold Oblique:size=12;3
font-1 = FontAwesome5Free:style=Solid:size=14;3
font-2 = FontAwesome5Brands:style=Solid:size=12;3
tray-position   = right
tray-padding    = 2
tray-background = #2aa198
cursor-click  = pointer
cursor-scroll = ns-resize
modules-left   = startfvwm fvwmtd xkeyboard wintitle
modules-center = 
modules-right  = i3media disk memory cpu temperature nm i3light i3vol battery

[global/wm]
margin-top = 0
margin-bottom = 0

[module/start]
type = custom/text
content = %{T1}  %{T-}
click-left = i3menu -s -c blue -l 1 -y 27
click-right = xtheme
content-background = ${colors.acc}
content-foreground = ${colors.fg0}
content-padding = 0

[module/startfvwm]
type = custom/text
content = %{T1}  %{T-}
click-left = i3menu -s -y 50 -x 10 -c blue -l 1
click-right = menunicode
content-background = ${colors.acc}
content-foreground = ${colors.fg0}
content-padding = 1

[module/td]
type = custom/script
exec = bash ~/scr/pb/td
format-background = ${colors.acc}
format-foreground = ${colors.fg0}
format-padding = 1
interval = 1

[module/fvwmtd]
type = custom/script
exec = bash ~/scr/pb/td
format-background = ${colors.acc}
format-foreground = ${colors.bg0}
format-padding = 1
interval = 1

[module/ws]
type = custom/ipc
hook-0 = ~/scr/pb/ws
initial = 1
click-left  = i3-msg workspace back_and_forth
scroll-up   = i3-msg workspace prev
scroll-down = i3-msg workspace next
format-background = ${colors.acc}
format-foreground = ${colors.bg0}
format-padding = 1


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
format-prefix = %{T1} %{T-}
label-layout = %layout%
format-background = ${colors.acc}
format-foreground = ${colors.bg0}
format-prefix-foreground = ${colors.bg0}
label-indicator-background = ${colors.gnt}
format-padding = 0
label-indicator-padding = 0
label-indicator-margin = 1
format-prefix-underline    = ${colors.acc}
label-layout-underline     = ${colors.acc}
label-indicator-underline  = ${colors.gnt}

[module/i3bg]
type = custom/ipc
hook-0 = pbcat -m i3bg
format = %{T1} %{T-}<output>
initial = 1
click-left  = i3bgc show
click-right = i3bgc blur
format-background = ${colors.acc}
format-foreground = ${colors.bg0}
format-padding = 0

[module/shot]
type = custom/text
content = %{T1}%{T-}
click-left = screenshot
content-background = ${colors.acc}
content-foreground = ${colors.bg0}
content-padding = 1
interval = 1

[module/wintitle]

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{T1} %{T-}"
format-prefix-foreground = ${colors.bkd}
format-background = ${colors.blu}
format-foreground = ${colors.bkd}
format-underline = ${colors.bkd}
format-padding = 1
label = %percentage_used%

[module/cpu]
type = internal/cpu
label = %{T1} %{T-}%percentage%
format = <label>
interval = 2
format-background = ${colors.blu}
format-foreground = ${colors.bkd}
format-padding = 1
;format-prefix = %{T1} %{T-}
;format-prefix = CPU
;format-prefix-foreground = ${colors.bkd}
;format-underline = ${colors.ylw}

[module/temperature]
format-background = ${colors.blu}
format-foreground = ${colors.bkd}
format-padding = 1
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <ramp> <label>
format-underline = ${colors.red}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}
format-warn-background = ${colors.blu}
format-warn-foreground = ${colors.bkd}
format-warn-padding = 1
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.ylw}
ramp-0 = %{T1}%{T-}
ramp-1 = %{T1}%{T-}
ramp-2 = %{T1}%{T-}
ramp-foreground = ${colors.bkd}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
format-prefix = %{T1} %{T-}
format-background = ${colors.blu}
format-foreground = ${colors.bkd}
format-padding = 1
format-prefix-foreground = ${colors.bkd}
;format-prefix-underline = ${colors.gnt}
label-layout = %layout%
;label-layout-underline = ${colors.gnt}
label-indicator-padding = 1
label-indicator-margin = 1
label-indicator-background = ${colors.gnt}
;label-indicator-underline = ${colors.gnt}

[module/backlight]
type = custom/ipc
hook-0 = ~/scr/pb/brightness
initial = 1
click-left = redshift -P -O 3700
click-right = redshift -x
scroll-up = "light -A 10 && polybar-msg hook backlight 1"
scroll-down = "light -U 10 && polybar-msg hook backlight 1"
format-background = ${colors.wtd}
format-foreground = ${colors.bkd}
format-padding = 1

[module/pulseaudio]

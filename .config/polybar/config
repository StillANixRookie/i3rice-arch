bar-volume-foreground-1 = ${colors.cyn}
bar-volume-foreground-2 = ${colors.cyn}
bar-volume-foreground-3 = ${colors.cyn}
bar-volume-foreground-4 = ${colors.cyn}
bar-volume-foreground-5 = ${colors.ylw}
bar-volume-foreground-6 = ${colors.red}

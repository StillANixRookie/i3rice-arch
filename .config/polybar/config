interval = 60

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{T1} %{T-}"
format-prefix-foreground = ${colors.bg0}
format-background = ${colors.acc}
format-foreground = ${colors.bg0}
format-underline = ${colors.bg0}
format-padding = 1
label = %percentage_used%

[module/cpu]
type = internal/cpu
label = %{T1} %{T-}%percentage%
format = <label>
interval = 2
format-background = ${colors.acc}
format-foreground = ${colors.bg0}
format-padding = 1
;format-prefix = %{T1} %{T-}
;format-prefix = CPU
;format-prefix-foreground = ${colors.bg0}
;format-underline = ${colors.ylw}

[module/temperature]
type = custom/script

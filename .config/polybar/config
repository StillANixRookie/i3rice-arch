[global/wm]
margin-top    = 5
margin-bottom = 5

[module/start]
type = custom/text
content = %{T1}  %{T-}
click-left = i3menu -l 1 -y 27 -s -c blue
click-right = i3shutdown
content-background = #EEC3B7
content-foreground = #fdfbfa
content-padding = 0

[module/startfvwm]
type = custom/text
content = %{T1}  %{T-}
click-left = i3menu -s -y 50 -x 10 -c blue -l 1
click-right = menunicode
content-background = #EEC3B7
content-foreground = #fdfbfa
content-padding = 1

[module/td]
type = custom/script
exec = bash ~/scr/pb/td
;format-background = #EEC3B7
format-foreground = #fdfbfa
format-padding = 1
interval = 1

[module/fvwmtd]
type = custom/script
exec = bash ~/scr/pb/td
format-background = #EEC3B7

[module/start]
type = custom/text
content = %{T1}%{T-}
click-left = rofi -show drun
click-right = ~/scr/keybindingsmenu
content-background = ${colors.wtd}
content-foreground = ${colors.bkd}
content-padding = 3

[module/startfvwm]
type = custom/text
content = %{T1}%{T-}
click-left = rofi -show drun -yoffset 50 -xoffset 10
click-right = ~/scr/keybindingsmenu
content-background = ${colors.wtd}
content-foreground = ${colors.bkd}
content-padding = 3

[module/shot]
type = custom/script
exec = echo %{T1}%{T-}
click-left = ~/scr/screenshot
format-background = ${colors.blu}
format-foreground = ${colors.bkd}
format-padding = 1
interval = 1

[module/td]
type = custom/script
exec = bash ~/scr/pb/td
format-background = ${colors.bkd}
format-foreground = ${colors.wtd}
format-padding = 1
interval = 1

[module/fvwmtd]
type = custom/script
exec = bash ~/scr/pb/td
format-background = ${colors.bkd}
format-foreground = ${colors.wtd}
format-padding = 1
interval = 1

[module/ws]
type = custom/ipc
hook-0 = ~/scr/pb/ws
initial = 1
click-left = i3-msg workspace back_and_forth
scroll-up = i3-msg workspace prev
scroll-down = i3-msg workspace next
format-background = ${colors.blu}
format-foreground = ${colors.bkd}
format-padding = 1
;format-background = ${colors.bkd}
;format-foreground = ${colors.blu}

[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%

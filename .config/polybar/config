format-padding = 1
interval = 1

[module/ws]
type = custom/ipc
hook-0 = ~/scr/pb/ws
initial = 1
click-left  = i3-msg workspace back_and_forth
scroll-up   = i3-msg workspace prev
scroll-down = i3-msg workspace next
;format-background = #efc9bf
format-foreground = #383436
format-padding = 1


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
format-prefix = %{T1}  %{T-}
label-layout = %layout%
;format-background = #f1d1c7
format-foreground = #383436
format-prefix-foreground = #383436
label-indicator-background = #DDCFD0
format-padding = 0
label-indicator-padding = 0
label-indicator-margin = 1
format-prefix-underline    = #f1d1c7
label-layout-underline     = #f1d1c7
label-indicator-underline  = #DDCFD0

[module/gwc]
type = custom/ipc
hook-0 = pbcat -m gwc
format = %{T1} %{T-}<output>
initial = 1
click-left  = gwcmod show
click-right = gwcmod blur
;format-background = #f3d7cf
format-foreground = #383436
format-padding = 0


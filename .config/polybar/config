label-discharging-foreground = ${colors.fg0}
label-discharging-background = ${colors.acc}
format-discharging-padding = 0
format-discharging-prefix-padding = 1
format-discharging-foreground = ${colors.fg0}
format-discharging-background = ${colors.acc}
format-discharging-prefix-foreground = ${colors.fg0}
format-discharging-prefix-background = ${colors.acc}
format-charging-padding-foreground = ${colors.fg0}
format-charging-padding-background = ${colors.acc}
format-discharging-padding-foreground = ${colors.fg0}
format-discharging-padding-background = ${colors.acc}
format-charging = <animation-charging><label-charging>
format-charging-underline = ${colors.fg0}
format-discharging = <ramp-capacity><label-discharging>
format-discharging-underline = ${self.format-charging-underline}
format-full-prefix = "%{T1}%{T-}"
format-full-underline = ${self.format-charging-underline}
ramp-capacity-0 = %{T1}%{T-}
ramp-capacity-1 = %{T1}%{T-}
ramp-capacity-2 = %{T1}%{T-}
ramp-capacity-3 = %{T1}%{T-}
ramp-capacity-4 = %{T1}%{T-}
ramp-capacity-foreground = ${colors.fg0}
ramp-capacity-background = ${colors.acc}
animation-charging-0 = %{T1}%{T-}
animation-charging-1 = %{T1}%{T-}
animation-charging-2 = %{T1}%{T-}
animation-charging-3 = %{T1}%{T-}
animation-charging-4 = %{T1}%{T-}

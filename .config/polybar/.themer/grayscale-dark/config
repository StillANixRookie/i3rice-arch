[colors]
tr = #000000ff

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[bar/i3]
;monitor             = ${env:MONITOR:HDMI-1}
override-redirect   = true
;bottom              = true
height              = 25
width               = 100%
radius              = 0.0
fixed-center        = false
enable-ipc          = true
background          = ${colors.tr}
foreground          = #282A36
line-size           = 0
border-size         = 0
line-color          = #414458
border-color        = ${colors.tr}
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0
font-0              = CMU Typewriter Text:size=12;3
font-1              = FontAwesome5Free:style=Solid:size=12;2
font-2              = FontAwesome5Brands:style=Solid:size=12;2
font-3              = Inconsolata Nerd Font:style=Regular:size=21;6
tray-position       = right
tray-padding        = 2
tray-maxsize        = 16
tray-transparent    = true
tray-background     = #414458
cursor-click        = pointer
cursor-scroll       = ns-resize
modules-left        = start td ws xkeyboard gwc arrow1
modules-center      = arrow2 i3media arrow3
modules-right       = arrow4 disk memory cpu temperature i3light i3vol battery


label-indicator-padding = 0
label-indicator-margin = 1
format-prefix-underline    = #6f7180
label-layout-underline     = #6f7180
label-indicator-underline  = #B043D1

[module/gwc]
type = custom/ipc
hook-0 = pbcat -m gwc
format = %{T1} %{T-}<output>
initial = 1
click-left  = gwcmod show
click-right = gwcmod blur
format-background = #858793
format-foreground = #282A36
format-padding = 0


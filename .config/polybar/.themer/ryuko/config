[global/wm]
margin-top    = 5
margin-bottom = 5

[module/start]
type = custom/text
content = %{T1}  %{T-}
click-left = i3menu -l 1 -y 27 -s -c blue
click-right = i3shutdown
content-background = #666C99
content-foreground = #040817
content-padding = 0

[module/td]
type = custom/script
exec = bash ~/scr/pb/td
;format-background = #666C99
format-foreground = #040817
format-padding = 1
interval = 1

[module/ws]
type = custom/ipc
hook-0 = ~/scr/pb/ws
initial = 1
click-left  = i3-msg workspace back_and_forth
scroll-up   = i3-msg workspace prev
scroll-down = i3-msg workspace next
;format-background = #5a6089
format-foreground = #fdfcfb
format-padding = 1


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
format-prefix = %{T1}  %{T-}
label-layout = %layout%
;format-background = #4d5378
format-foreground = #fdfcfb
format-prefix-foreground = #fdfcfb
label-indicator-background = #7B87A5
format-padding = 0
label-indicator-padding = 0
label-indicator-margin = 1
format-prefix-underline    = #4d5378
label-layout-underline     = #4d5378
label-indicator-underline  = #7B87A5

[module/gwc]
type = custom/ipc
hook-0 = pbcat -m gwc
format = %{T1} %{T-}<output>
initial = 1
click-left  = gwcmod show
click-right = gwcmod blur
;format-background = #414768
format-foreground = #fdfcfb
format-padding = 0

[module/shot]
type = custom/text
content = %{T1}%{T-}
click-left = screenshot
;content-background = #666C99

format-prefix-underline    = #d2af54
label-layout-underline     = #d2af54
label-indicator-underline  = #ECA421

[module/gwc]
type = custom/ipc
hook-0 = pbcat -m gwc
format = %{T1} %{T-}<output>
initial = 1
click-left  = gwcmod show
click-right = gwcmod blur
;format-background = #cfb061
format-foreground = #360A09
format-padding = 0


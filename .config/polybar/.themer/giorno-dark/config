[global/wm]
margin-top    = 5
margin-bottom = 5

[module/start]
type = custom/text
content = %{T1}  %{T-}
click-left = i3menu -l 1 -y 27 -s -c blue
click-right = i3shutdown
content-background = #D7AB39
content-foreground = #c3bba6
content-padding = 0

[module/startfvwm]
type = custom/text
content = %{T1}  %{T-}
click-left = i3menu -s -y 50 -x 10 -c blue -l 1
click-right = menunicode
content-background = #D7AB39
content-foreground = #c3bba6
content-padding = 1

[module/td]
type = custom/script
exec = bash ~/scr/pb/td
;format-background = #D7AB39
format-foreground = #c3bba6
format-padding = 1
interval = 1

[module/fvwmtd]
type = custom/script

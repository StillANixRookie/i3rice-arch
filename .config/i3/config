	colors {
	background $blk
#                       brdr bkgr text
	focused_workspace   $blk $blk $wht
	active_workspace    $blk $blk $cyn
	inactive_workspace  $blk $blk $blu
	binding_mode        $ylw $ylw $blk
	urgent_workspace    $red $red $blk
	}
}


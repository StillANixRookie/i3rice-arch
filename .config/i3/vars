exec --no-startup-id xrandr --output eDP-1 --auto --output HDMI-1 --left-of eDP-1 --auto


# >>>> MAIN
# //// FONTS
set $font1 FixedsysMono
set $font2 FontAwesome
set $font3 monaco
set $fonts 12

font pango:$font1,$font2 $fonts


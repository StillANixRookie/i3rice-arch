!dracula
! vim:syntax=xdefaults
#define cblkd #282A36
#define credl #FF5555
#define cgrnl #50FA7B
#define cylwl #F1FA8C
#define cblul #BD93F9
#define cgntl #FF79C6
#define ccynl #8BE9FD
#define cwhtl #BFBFBF
#define cblkl #4D4D4D
#define credd #FF6E67
#define cgrnd #5AF78E
#define cylwd #F4F99D
#define cblud #CAA9FA
#define cgntd #FF92D0
#define ccynd #9AEDFE
#define cwhtd #E6E6E6

! >>>> COLORS & VARIABLES
#define fontname monospace
!#define font TerminessTTFNerdFontMono
#define fontsize 14
#define fontsize2 12

*background:				cblkd
*foreground:				cwhtl
*fading:					30
*fadeColor:					black
*cursorColor:				ccynd
*pointerColorBackground:	cblkd
*pointerColorForeground:	ccynd
*border:					cblkd

!black dark/light
*color0:	cblkd
*color8:	cblkl
!red dark/light
*color1:	credd
*color9:	credl
!green dark/light
*color2:	cgrnd
*color10:	cgrnl
!yellow dark/light
*color3:	cylwd
*color11:	cylwl
!blue dark/light
*color4:	cblud
*color12:	cblul
!magenta dark/light
*color5:	cgntd
*color13:	cgntl
!cyan dark/light
*color6:	ccynd
*color14:	ccynl
!white dark/light
*color7:	cwhtd
*color15:	cwhtl

! >>>> ROFI
#include "/home/gavarch/xinclude/xrofi"

! >>>> Xft
Xft.dpi:		96
Xft.antialias:	true
Xft.hinting:	true
Xft.rgba:		rgb
Xft.autohint:	false
Xft.hintstyle:	hintslight
Xft.lcdfilter:	lcddefault

! >>>> XTerm
! XTerm*background:	cblkd
! XTerm*foreground:	cwhtd
! XTerm*pointerColor:	ccynd
! XTerm*faceName:		Fixed
! XTerm*faceSize:		11
! XTerm*reverseVideo:	on
! XTerm*faceName:		Terminus:size=11:antialias=true
! XTerm*selectToClipboard:true

! >>>> Xcursor
Xcursor.theme: Bibata_Red
Xcursor.size: 32

! >>>> URXVT
URxvt.font: xft:fontname:size=fontsize

URxvt*fading: 10
URxvt*depth: 10
URxvt*scrollBar: false
URxvt*mouseWheelScrollPage:	false
URxvt*cursorBlink: true
URxvt*background: cblkd
URxvt*foreground: cwhtl
URxvt*saveLines: 5000
URxvt*useColor:	true
URxvt*internalBorder: 1

! for 'fake' transparency (without Compton) uncomment the following three lines
! URxvt*inheritPixmap:            true
! URxvt*transparent:              true
! URxvt*shading:                  138

! >>>> URXVT EXTENSIONS
URxvt*perl-ext-common: default,clipboard,matcher,resize-font,config-reload
!URxvt*perl-lib: /home/gavarch/.urxvt/ext
URxvt*url-launcher:	/usr/bin/google-chrome-beta
URxvt*matcher.button: 1
URxvt*keysym.C-y: clipboard:copy
URxvt*keysym.C-a: clipboard:paste
URxvt*keysym.C-I: resize-font:smaller
URxvt*keysym.C-U: resize-font:bigger
URxvt*keysym.C-Y: resize-font:reset
! URxvt*tabbed.autohide: true
! URxvt*keysym.C-t: perl:tabbedex:new_tab
! URxvt*keysym.C-Tab: perl:tabbedex:next_tab
! URxvt*keysym.C-Shift-Tab: perl:tabbedex:prev_tab

#!/bin/bash

yellow=$(xrdb -query | grep '*color3' | awk '{print $NF}')
red=$(xrdb -query | grep '*color9' | awk '{print $NF}')
black=$(xrdb -query | grep '*color0' | awk '{print $NF}')
white=$(xrdb -query | grep '*color7' | awk '{print $NF}')

tot=$(free|grep 'Mem'|awk '{print $2}')
used=$(free|grep 'Mem'|awk '{print $3}')

c=$(awk -v t=${tot} -v u=${used} 'BEGIN{ print int(u/t*100) }')

if [[ $c -ge 80 ]]; then
    echo "<span background=\"$red\" foreground=\"$black\"> RAM $c% </span>"
elif [[ $c -ge 50 ]]; then
    echo "<span background=\"$yellow\" foreground=\"$black\"> RAM $c% </span>"
else
    echo "<span background=\"$white\" foreground=\"$black\"> RAM $c% </span>"
fi

#!/bin/bash

black=$(xrdb -query | grep '*color0' | awk '{print $NF}')
green=$(xrdb -query | grep '*color2' | awk '{print $NF}')

tot=$(free|grep 'Mem'|awk '{print $2}')
used=$(free|grep 'Mem'|awk '{print $3}')

c=$(awk -v t=${tot} -v u=${used} 'BEGIN{ print int(u/t*100) }')

if [[ $c -ge 80 ]]; then
    echo "<span background=\"#dc322f\" foreground=\"$black\"> RAM $c% </span>"
elif [[ $c -ge 50 ]]; then
    echo "<span background=\"#b58900\" foreground=\"$black\"> RAM $c% </span>"
else
    echo "<span background=\"$green\" foreground=\"$black\"> RAM $c% </span>"
fi

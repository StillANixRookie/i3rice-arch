#!/bin/bash

bash ~/scripts/mkdunsttheme
bash ~/scripts/mkblocksconf
bash ~/scripts/mkvistheme
bash ~/scripts/mkatomtheme
bash ~/scripts/mkfixedsyscss
bash ~/scripts/mkzathrc
bash ~/scripts/i3concat
killall i3bar
i3bar --bar_id=bar-1 &>/dev/null &
pkill -9 -f $HOME/scripts/i3listen.py
python $HOME/scripts/i3listen.py &>/dev/null &

#!/bin/bash

name="$(xdotool getactivewindow getwindowname)"
name="${name/ - File Manager/}"
title="${name/gavarch/home}"

case $name in
	gavarch)
		xdotool key ctrl+1
		i3-msg title_format "$title"
		;;
	Drive)
		xdotool key ctrl+2
		i3-msg title_format "$title"
		;;
	Pictures)
		xdotool key ctrl+1
		i3-msg title_format "$title"
		;;
	Videos)
		xdotool key ctrl+1
		i3-msg title_format "$title"
		;;
esac

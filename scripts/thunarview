#!/bin/bash

name="$(xdotool getactivewindow getwindowname)"
name="${name/ - File Manager/}"
title="${name/gavarch/home}"

icn="ctrl+shift+i"
lst="ctrl+shift+l"

ora="ctrl+shift+k"
ord="ctrl+shift+j"

nme="ctrl+shift+n"
dte="ctrl+shift+d"
sze="ctrl+shift+s"
tpe="ctrl+shift+t"

i3-msg title_format "$title"

case $name in
	gavarch)
		xdotool key $ora
		xdotool key $nme
		xdotool key $icn
		xdotool key $nme
		;;
	Drive)
		xdotool key $ora
		xdotool key $nme
		xdotool key $lst
		xdotool key $nme
		;;
	Downloads)
		xdotool key $ord
		xdotool key $dte
		xdotool key $lst
		xdotool key $dte
		;;
	Pictures)
		xdotool key $ora
		xdotool key $lst
		;;
	scripts)
		xdotool key $ora
		xdotool key $lst
		;;
	gifs)
		xdotool key $ora
		xdotool key $icn
		;;
	meme)
		xdotool key $ora
		xdotool key $icn
		;;
	scrots)
		xdotool key $ora
		xdotool key $icn
		;;
	walls)
		xdotool key $ora
		xdotool key $icn
		;;
	Videos)
		xdotool key $ora
		xdotool key $icn
		;;
#	*)
#		;;
esac


#!/bin/bash

black=$(xrdb -query | grep '*color0' | awk '{print $NF}')
magenta=$(xrdb -query | grep '*color5' | awk '{print $NF}')

playing=$(mpc current)

if [ -z "$playing" ]
then
	:
else
	echo "<span background=\"$magenta\" foreground=\"$black\"> MPD ${playing} </span>"
fi

case $BLOCK_BUTTON in
  3) mpc prev ;;  # next song
  2) mpc toggle ;;  # next song
  1) mpc next ;;  # next song
esac

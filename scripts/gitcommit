#!/bin/bash

cd

#black=$(xrdb -query | grep '*color0' | awk '{print $NF}')
#white=$(xrdb -query | grep '*color7' | awk '{print $NF}')
#blue=$(xrdb -query | grep '*color4' | awk '{print $NF}')
#font=$(xrdb -query | grep 'URxvt.font' | awk '{print $NF}')

repo=$(cat ~/scripts/githubrepos | i3menu "Update which repo?:")

if [[ -z $repo ]]; then
    :
else
    cd ~/$repo
    notify-send "Updating your $repo git repo..." -i ~/scriptpics/gitwhite.png
    git add .
    git commit -m "$(date +"%c")"
    git fetch
    git merge origin/master
    git push -u origin master
    cd
    notify-send "... $repo repo updated." -i ~/scriptpics/gitwhite.png
fi

#!/bin/bash

idle=$(sar 1 1|grep 'Average'|awk '{print $NF}')
let " cpu = 100 - ${idle:0:-3} "

if [[ $cpu -ge 80 ]]; then
    echo "<span background=\"#dc322f\" foreground=\"$(bash ~/scripts/getxcolors black)\"> CPU $cpu% </span>"
elif [[ $cpu -ge 50 ]]; then
    echo "<span background=\"#b58900\" foreground=\"$(bash ~/scripts/getxcolors black)\"> CPU $cpu% </span>"
else
    echo "<span background=\"$(bash ~/scripts/getxcolors yellow)\" foreground=\"$(bash ~/scripts/getxcolors black)\"> CPU $cpu% </span>"
fi

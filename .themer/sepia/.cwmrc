# ━  vars & colors
fontname             "Luxi Mono:size=12"
borderwidth          3
gap   30 30 30 30    #[T,B,L,R]

color menubg         "#FFD9B3"
color font           "#1A110A"
color activeborder   "#b88c66"
color inactiveborder "#714019"
color urgencyborder  "#cc241d"

# ━  Ignore programs; no borders
ignore xclock
ignore dock
ignore menu
ignore polybar

# ━  App menu
command terminal "urxvt -name terminal"
command file     "urxvtc -name ranger   -e ranger"
command music    "urxvtc -name ncmpcpp  -e ncmpcpp"
command spotify  spotify
command news     "urxvtc -name newsboat -e newsboat"
command browser  firefox
command cwmrc    "edtr -s doots ~/git/i3rice-arch/.themer/template.cwmrc"

# ━  Misc
snapdist 4
sticky yes

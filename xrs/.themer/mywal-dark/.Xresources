! ━  1vars

#define fontname  Iosevka
#define fontsize  12
#define fontsize2 12

! ━  2colorvars

*background:             tbg0
*foreground:             tfg0
*fading:                 30
*fadeColor:              black
*cursorColor:            tred
*pointerColorBackground: tbg0
*pointerColorForeground: tcyn
*border:                 tbg0

*color0:                 tbg0

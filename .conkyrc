conky.config = {
	alignment = 'top_left',
	background = true,
	color2 = '458588',
	color3 = '3c3c3c',
	cpu_avg_samples = 2,
	default_color = 'd7c79e',
	double_buffer = true,
	font = 'CMU Typewriter Text:bold:size=12',
	gap_x = 25,
	gap_y = 13,
	minimum_width = 200,
	no_buffers = true,
	own_window = true,
	own_window_type = 'override',
	own_window_transparent = true,
	update_interval = 1.0,
	use_xft = true,
}
conky.text = [[
${voffset 25}$color2${font CMU Typewriter Text:bold:size=60}${time %R} \
${voffset -25}$color3${font CMU Typewriter Text:bold:oblique:size=20}  $alignr${time %A}
${voffset -10}$color3${font CMU Typewriter Text:bold:oblique:size=20}  $alignr${time %e %b %Y}

${voffset 20}${goto 40}${color}CPU${font CMU Typewriter Text:bold:size=12}$alignr$cpu%
${voffset 5}${goto 40}$font$color2${top name 1}$alignr$color${top cpu 1}%
${goto 40}$color2${top name 2}$alignr$color${top cpu 2}%
${goto 40}$color2${top name 3}$alignr$color${top cpu 3}%
${goto 40}$color2${top name 4}$alignr$color${top cpu 4}%
${goto 40}$color2${top name 5}$alignr$color${top cpu 5}%

${voffset 1}${color2}${font CMU Typewriter Text:bold:oblique:size=50}Notes
${voffset -15}${color}${font CMU Typewriter Text:bold:size=16}${exec cat $HOME/todo}
]]

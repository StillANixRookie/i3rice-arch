main () {
	rm .theme_list
	thms=$(ls -l | grep -v "^total" | awk '{print $NF}')
	for i in $thms; do
		fg0=$(cat ${i} | grep "foreground" | awk '{print $NF}')
		com=$(cat ${i} | grep "comment" | awk '{print $NF}')
		acc=$(cat ${i} | grep "accent" | awk '{print $NF}')
		bg0=$(cat ${i} | grep "background" | awk '{print $NF}')
		red=$(cat ${i} | grep "redd" | awk '{print $NF}')
		grn=$(cat ${i} | grep "green" | awk '{print $NF}')
		ylw=$(cat ${i} | grep "yellow" | awk '{print $NF}')
		blu=$(cat ${i} | grep "blue" | awk '{print $NF}')
		gnt=$(cat ${i} | grep "magenta" | awk '{print $NF}')
		cyn=$(cat ${i} | grep "cyan" | awk '{print $NF}')
		echo "\
<span foreground=\"#666666\" background=\"$fg0\"> fg </span>\
<span foreground=\"#666666\" background=\"$bg0\"> bg </span>\
<span foreground=\"#666666\" background=\"$acc\"> acc </span>\
 $i" >> .theme_list
	done
}

main

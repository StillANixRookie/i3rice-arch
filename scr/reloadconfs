#!/bin/bash
WPP=$($HOME/scr/themer -v wallpaper)
[[ -n $WPP ]] || WPP=$($HOME/scr/themer -v acc)
$HOME/scr/i3wallpaper -w "$WPP" -t "$($HOME/scr/themer -v acc | grep '#')"
$HOME/scr/themer -x xrs-reload   -a $HOME/xrs
$HOME/scr/themer -x i3concat     -a $HOME/.config/i3
$HOME/scr/themer -x pb-reload    -a $HOME/.config/polybar
$HOME/scr/themer -x reloadinst   -a $HOME/.config/zathura
$HOME/scr/themer -x dunst-reload -a $HOME/.config/dunst
$HOME/scr/themer -a $HOME/git/i3rice-arch
$HOME/scr/themer -a $HOME/.vim/colors
$HOME/scr/themer -a $HOME/.config/rofi
$HOME/scr/themer -a $HOME/.config/vis/colors
$HOME/scr/themer -a $HOME/.config/mpv
$HOME/scr/themer -a $HOME/.config/qutebrowser
$HOME/scr/themer -a $HOME/scr/.unused
$HOME/scr/themer -a $HOME/plt/css
$HOME/scr/i3listen-toggle
#$HOME/scr/themer -a $HOME/.config/tint2
#$HOME/scr/themer -a $HOME/git/atompackages/packages/rice-syntax/styles

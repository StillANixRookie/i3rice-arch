$HOME/scr/themer -t "$HOME/scr" -x " " -g
$HOME/scr/themer -t "$HOME/.config/vis/colors" -x " " -g
$HOME/scr/themer -t "$HOME/.config/rofi" -x " " -g
$HOME/scr/themer -t "$HOME/plt/css" -x " " -g
$HOME/scr/themer -t "$HOME/.config/zathura" -x " " -g
$HOME/scr/themer -t "$HOME/.config/dunst" -x "dunst-reload" -g

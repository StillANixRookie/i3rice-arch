#!/usr/bin/env bash

TMR="themer"
WPP=$($TMR -v wallpaper)
TNT="$($TMR -v 'tint ')"
[[ -n $WPP ]] || WPP=$($TMR -v "acc ")
[[ -n $TNT ]] && TINT="-t $TNT" || TINT=" "
i3wallpaper -w "$WPP" $TINT
$TMR -x xrs-reload   -a $USER_XRS_DIR
$TMR -x i3concat     -a $HOME/.config/i3
$TMR -x pb-reload    -a $HOME/.config/polybar
$TMR -x reloadinst   -a $HOME/.config/zathura
$TMR -x dunst-reload -a $HOME/.config/dunst
$TMR -x reload       -a $HOME/.conky
$TMR -x genfavicon   -a $USER_REPO_DIR/ghb/themes/hyde/static/css
$TMR -a $USER_REPO_DIR/i3rice-arch
#$TMR -a $USER_REPO_DIR/ghb/themes/hyde/layouts/_default
$TMR -a $HOME/.vim/colors
$TMR -a $HOME/.config/rofi
$TMR -a $HOME/.config/vis/colors
$TMR -a $HOME/.config/mpv
$TMR -a $HOME/.config/qutebrowser
$TMR -a $USER_SCR_DIR
$TMR -a $USER_SCR_DIR/.unused
$TMR -a $XDG_TEMPLATES_DIR/css
i3listen-toggle
#$TMR -a $HOME/.config/tint2
#$TMR -a $USER_GIT_DIR/atompackages/packages/rice-syntax/styles

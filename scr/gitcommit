#!/usr/bin/env bash

cd $USER_REPO_DIR
[[ -n $1 ]] && RPO="$1" || RPO="$(ls | dmrap -a lightylw -w 600 -L mc -l 15 -p "gitcommit")"

notify-send "Updating your $RPO git repo..." -i ${SCR_DIR}pic/gitwhite.png
cd ${RPO}
pwd
git add .
git commit -m "$(date +"%c")"
git fetch
git merge origin/master
git push -u origin master
notify-send "... $RPO repo updated." -i ${SCR_DIR}pic/gitwhite.png

#!/usr/bin/env bash

help () {
cat << 'EOB'
# NAME

__multimon__ - rofi monitor control for i3

# SYNOPSIS

```
multimon
multimon --help|-h
```
EOB
echo "$1"
exit
}

while true; do
	case $1 in
		--help | -h ) help ;;
		-- ) shift ; break ;;
		*  ) break         ;;
	esac
	shift
done

ALL=$(xrandr -q | grep 'connected'    | awk '{print $1}')
CNN=$(xrandr -q | grep ' connected'   | awk '{print $1}')
DCN=$(xrandr -q | grep 'disconnected' | awk '{print $1}')
LCN=$(echo $CNN | wc -w)
MNOP="-l 0 -w 100 -o horizontal"

onecon () {
	xrandr --output "${CNN/ /}" --primary --auto
	OFF=${ALL/${CNN/ /}/}

	for i in $(echo ${OFF}); do
		xrandr --output "$i" --off
	done
	exit
}

1_mon () {
	MN1=$(printf "%s\n" $CNN | i3menu -p "Choose primary monitor " $MNOP)
	xrandr --output "$MN1" --primary --auto
	OFF=${ALL/${MN1}/}

	for i in $(echo ${OFF}); do
		xrandr --output "$i" --off
	done
}

2_mon () {
	MN1=$(printf "%s\n" $CNN | i3menu -p "Choose primary monitor " $MNOP)
	CNN=${CNN/${MN1}/}
	OFF=${ALL/${MN1}/}

	MN2=$(printf "%s\n" $CNN | i3menu -p "Choose 2nd monitor " $MNOP)
	OFF=${OFF/${MN2}/}
	M2D=$(printf "%s\n" left-of right-of above below same-as | \
		i3menu -p "2nd monitor position from 1st " $MNOP)

	xrandr --output "$MN1" --primary --auto --output "$MN2" --"$M2D" "$MN1" --auto

	for i in $(echo ${OFF}); do
		xrandr --output "$i" --off
	done
}

3_mon () {
	MN1=$(printf "%s\n" $CNN | i3menu -p "Choose primary monitor " $MNOP)
	CNN=${CNN/${MN1}/}
	OFF=${ALL/${MN1}/}

	MN2=$(printf "%s\n" $CNN | i3menu -p "Choose 2nd monitor " $MNOP)
	CNN=${CNN/${MN2}/}
	OFF=${OFF/${MN2}/}
	M2D=$(printf "%s\n" left-of right-of above below same-as | \
		i3menu -p "2nd monitor position from 1st " $MNOP)

	MN3=$(printf "%s\n" $CNN | i3menu -p "Choose 3nd monitor " $MNOP)
	OFF=${OFF/${MN3}/}
	M3D=$(printf "%s\n" left-of right-of above below same-as | \
		i3menu -p "3rd monitor position " $MNOP)
	WCH=$(printf "%s\n" $MN1 $MN2 | i3menu -p "Which monitor? " $MNOP)

	xrandr --output "$MN1" --primary --auto --output "$MN2" \
		--"$M2D" "$MN1" --auto --output "$MN3" --"$M3D" "$WCH" --auto

	for i in $(echo ${OFF}); do
		xrandr --output "$i" --off
	done
}

A_mon () { arandr && exit ; }

[[ $LCN == 1 ]] && notify-send "Only one monitor connected!" && onecon
MDE=$(printf "%s\n" "1 Monitor" "2 Monitors" "3 Monitors" "A ARandR" \
	| i3menu -p "Choose mode" $MNOP | awk '{print $1}')
${MDE}_mon
feh --bg-fill $HOME/pic/i3wallpaper/current

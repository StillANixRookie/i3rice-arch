#!/usr/bin/env bash

# OA: Gavin Vales
# CREATED: Sat 30 Mar 18:22:18 GMT 2019

help () {
cat << 'EOB'
# NAME

__gedtr__ - gvim server wrapper

# SYNOPSIS

```
gedtr [--server|-s <name>] <file>
gedtr --help|-h
```

# OPTIONS

`--server|-s <name>`  
Specify server name. Default is `GVIM`.

`--help|-h`  
Print this help

EOB
exit
}

SVR=GVIM

while true; do
	case $1 in
		--server | -s ) SVO="${2:-}" ; shift ;;
		--help ) help ;;
		-h     ) help | sed -n "/# SYNOPSIS/,/#/p" | sed '/^#/d;/^$/d;/```/d' && exit ;;
		-- ) shift ; break ;;
		*  ) break         ;;
	esac
	shift
done

TRG="${@:-}"

EXT="${TRG##*/}" ; EXT="${EXT##*.}"

TYP="$(file $(readlink -f "$TRG"))"
TYP="${TYP#*:}" ; TYP="${TYP#* }" ; TYP="${TYP%% *}"
[[ $TYP == "Bourne-Again" ]] && TPF=bash

case $EXT in
	Xres*|Xdef*) EXF=Xfiles  ;;
	goste)       EXF=goste   ;;
	*conf*)      EXF=configs ;;
	*bash*)      EXF=bash    ;;
	sh)          EXF=sh      ;;
	*vim*)       EXF=vim     ;;
	yaml)        EXF=yaml    ;;
	html)        EXF=html    ;;
	py)          EXF=py      ;;
	ms)          EXF=groff   ;;
	css)         EXF=css     ;;
	md|rmd)      EXF=md      ;;
	bib)         EXF=bib     ;;
	tex)         EXF=tex     ;;
esac

[[ -n $TPF ]] && SVR="gedtr-$TPF"
[[ -n $EXF ]] && SVR="gedtr-$EXF"
[[ -n $SVO ]] && SVR="$SVO"

gvim --servername ${SVR} --remote-tab "${TRG}" &>/dev/null &

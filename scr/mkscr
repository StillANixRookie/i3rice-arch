#!/usr/bin/env bash

bashDir=$USER_SCR_DIR
pyDir=$XDG_DOCUMENTS_DIR/python
file=$1
subdir=$2
ft=$3

cd $HOME

if [[ ! -d $bashDir ]]; then
	mkdir $bashDir
	cd $bashDir
else
	cd $bashDir
fi

if [[ -n $subdir ]]; then
	if [[ ! -d $subdir ]]; then
		mkdir $subdir
		cd $subdir
	else
		cd $subdir
	fi
else
	:
fi

if [[ -f $file ]]; then
	vim $file
else
	cat > $file << 'EOB'
#!/usr/bin/env bash

# OA: Gavin Vales
# CREATED: $(date)
source $HOME/.config/user-dirs.dirs


EOB
	chmod +x $file
	vim $file
fi
